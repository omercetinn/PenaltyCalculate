@model PenaltyCalculate.Models.UserInformation

@{
    ViewBag.Title = "ReaderView";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Üye Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("UrunGuncelle", "Urun", FormMethod.Post))
{
        <div class="form-row">
            <div class="form-group col-md-6">
            @Html.Label("Üye Adı:")
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
            @Html.Label("Üye Soyadı:")
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
            @Html.Label("Ülke:")
            @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
            </div> 
            <div class="form-group col-md-6">
            @Html.Label("Üye Durumu:")
            @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
            @Html.Label("Alış Tarihi")
            @Html.TextBoxFor(x => x.ReceivedDate, new { @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
            @Html.Label("Teslim Tarihi:")
            @Html.TextBoxFor(x => x.ReturnDate, new { @class = "form-control" })
            </div>
        </div>       

    @Html.HiddenFor(x => x.Id)
        <button class="btn btn-info"><i class="fa fa-plus"></i> Ekle</button>
}

<br />
